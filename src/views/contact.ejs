<%- include('partials/header') %>

<div class="form_container">
    <div class="message_form"><% if (confirmationSend) { %>
    <span><%= confirmationSend %></span>
    <% } %>
    </div>
    <div class="container">
        <h2 class="form-title">Formulaire de contact</h2>
        <form action="/sendForm" method="POST">
          <label for="name">Nom & prénom</label>
          <input type="text" id="name" name="name" placeholder="Votre nom et prénom">
      
          <label for="object">Sujet</label>
          <input type="text" id="object" name="object" placeholder="L'objet de votre message">
      
          <label for="emailAddress">Email</label>
          <input id="emailAddress" type="email" name="email" placeholder="Votre email">
      
      
          <label for="message">Message</label>
          <textarea id="message" name="message" placeholder="Votre message" style="height:100px"></textarea>
      
          <input class="button-submit" type="submit" value="Envoyer">
        </form>
      </div>
      
</div>

<%- include('partials/footer') %>
